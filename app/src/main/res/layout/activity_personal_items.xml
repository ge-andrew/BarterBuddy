<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="16dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:subtitleTextColor="@color/peach" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/my_items"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="184dp"
            android:layout_height="144dp"
            android:src="@drawable/default_profile_face" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/personal_items_swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/personal_items_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="12dp" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <Button
            android:id="@+id/add_new_personal_item_button"
            android:layout_width="185dp"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:text="@string/add_item"
            android:textSize="20sp" />

        <Button
            android:id="@+id/active_items_buttons"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/public_offers"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>
